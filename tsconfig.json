{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "declaration": true,
        "target": "es6",
        "noImplicitAny": true,
        "moduleResolution": "node",
        "outDir": "dist",
        "baseUrl": "./lib/",
        "paths": {
            "@/*": ["./lib/*"],
            "@common/*": ["./lib/common/*"],
            "@config/*": ["./lib/config/*"],
            "@types/*": ["./lib/types/*"],
        },
        "typeRoots": [
            "./node_modules/@types",
            "./lib/types"
        ]
    },
    "include": [
      "lib/**/*"
    ]
}
